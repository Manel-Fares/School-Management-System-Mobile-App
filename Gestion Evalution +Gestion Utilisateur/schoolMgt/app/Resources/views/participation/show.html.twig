{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card bg-light mb-3" >
            <div class="card-body">
                <h5 class="card-title"></h5>
                <div class="row" style="margin-top: +1%">

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pr-xl-0 pr-lg-0 pr-md-0  m-b-30" >


                        <div class="product-slider">
                            <div class="card-body">
                                <img src="{{ asset('images/'~evenement.image)}} " style="height: 100%;width: 100%" >

                            </div>


                        </div>

                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pl-xl-0 pl-lg-0 pl-md-0 border-left m-b-30" >

                        <div class="product-details" style="height: 455px">
                            <div class="border-bottom pb-3 mb-3" style="margin-top: +50%;margin-left: +10px">

                                <a href="{{ path('club_rate', { 'idclub': evenement.idclub }) }}">
                                <h1>Organiser par: {{ evenement.idclub.nomclub }}</h1></a>
                                <h1 style="color: #1e7e34"><i class="fa fa-calendar" aria-hidden="true"></i>
                                    Date Debut : {% if evenement.datedebut %}{{ evenement.datedebut|date('Y-m-d') }}{% endif %}</h1>
                                <h1 style="color: #a00000"><i class="fa fa-calendar" aria-hidden="true"></i>
                                    Date Fin : {% if evenement.datefin %}{{ evenement.datefin|date('Y-m-d') }}{% endif %}</h1>
                                <h1><i class="fa fa-group" aria-hidden="true"></i>nombre Participants: {{ ev.x }}</h1>
                                <form method="POST">
                                    <input type="submit" value="Participer" class="genric-btn info circle">
                                </form>





                                <ul>
                                <li>
                                    <a href="{{ path('club_show_image') }}">Back to the list</a>
                                </li>




                            </ul>

                        </div>

                    </div>







                </div>
            </div>
            </div></div></div>
{% endblock  %}
